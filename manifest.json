{
  "manifest_version": 3,
  "name": "PhishShield",
  "version": "1.0",
  "description": "Real-time phishing website detection and protection",
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "webNavigation",
    "webRequest"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/verified (1).png",
      "48": "icons/verified-48px.png",
      "128": "icons/verified (2).png"
    }
  },
  "icons": {
    "16": "icons/verified (1).png",
    "48": "icons/verified-48px.png",
    "128": "icons/verified (2).png"
  }
}